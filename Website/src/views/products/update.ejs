          <legend>Talles</legend>
          
          <label for="xs_qty">XS</label>
          <input type="number" name="xs_qty" id="" value="XS">
          
          <label for="s_qty">S</label>
          <input type="number" name="s_qty" id="" value="S">
          
          <label for="m_qty">M</label>
          <input type="number" name="m_qty" id="" value="M">
          
          <label for="l_qty">L</label>
          <input type="number" name="l_qty" id="" value="L">
          
          <label for="xl_qty">XL</label>
          <input type="number" name="xl_qty" id="" value="XL">

         </fieldset>

         <fieldset>
        <label class="Datos" for = "description"></label>
        <textarea name="description" id="description" placeholder="DescripciÃ³n del Producto"></textarea>
         </fieldset>
         <fieldset>
          <label class="img" for="image"></label>
          <input type="file" name="image" id="image" multiple required>
        
        <fieldset>

<fieldset>
<label for="men">Hombre</label>
<input type="checkbox" name= "category" value="hombre">
<label for="women">Mujer</label>
<input type="checkbox" name= "category" value="mujer">
</fieldset>

<fieldset>
<label class="ofertas" for="ofert">Descuento</label>
  <input type="checkbox" name="ofert" id="ofert">
  <input type="number" name="discount" id="discount">
  <i class="fas fa-percentage"></i>
</fieldset>

<fieldset>
    <button class="boton" type="submit">Update</button>
</fieldset>
      </form>
    </section>
  </main>
    <%- include('../partials/footer') %> 
