<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
    <main id="update">
      <section class="form-update">
      <article>
        <picture class="logo-Update">
          <img src="/img/logo/logoSimple.svg" alt="" id="logo-Update-top" />
        </picture>
      </article>
      <h3 id="title"> Formulario Update</h3>
        <form action="/products/<%= products.id %>?m=PUT" method="post">
           <fieldset>  
              <label class= "Datos" for = "name">nombre</label>
              <input type="text" name="name" id="name" placeholder="name" >
            </fieldset>

              <fieldset>
              <label class="Datos" for = "price">precio</label>
              <input type="number" name= "price" id="price" placeholder="price" min="0" >
         </fieldset>

         <fieldset>
          <label class="Datos" for = "size">talle</label>
          <input type="number" name= "size" id="size" placeholder="size" min="0" >
        </fieldset>

         <fieldset>
        <label class="Datos" for = "description"></label>
        <textarea name="description" id="description"></textarea>
         </fieldset>

       <!-- <fieldset>
         <label class="img" for="image"></label>
          <input type="file" name= "image" id="image" multiple >
        </fieldset>-->

<fieldset>
<label for="men">Hombre</label>
<input type="checkbox" name= "category" value="Hombre">
<label for="women">Mujer</label>
<input type="checkbox" name= "category" value="Mujer">
</fieldset>

<fieldset>
<label class="ofertas" for="ofert">oferta</label>
  <input type="checkbox" name="ofert" id="ofert">
  <input type="number" name="discount" id="discount">
  <i class="fas fa-percentage"></i>
</fieldset>

<fieldset>
    <button class="boton" type="submit">Update</button>
</fieldset>
      </form>
    </section>
  </main>
    <%- include('../partials/footer') %> 
</body>
</html>