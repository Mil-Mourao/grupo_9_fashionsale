              <input type="text" name="name" id="name"  >
              
            </fieldset>

              <fieldset>
              <label class="no-show" for = "price">Precio:</label>
              <input type="number" name= "price" id="Price/Precio" placeholder="Price/Precio" min="0" >
         </fieldset>
    
