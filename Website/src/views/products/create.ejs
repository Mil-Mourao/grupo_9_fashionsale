<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
      <main id="create">
        <section class="form-create">
          <article>
            <picture class="logo-Create">
              <img src="/img/logo/logoSimple.svg" alt="" id="logo-Create-top" />
            </picture>
          </article>
          <h3 id="title"> Creaci√≥n de Productos</h3>
          <form action="/products/" enctype="multipart/form-data" method="post" multiple>
            <fieldset>
              <label for="name">
              <input type="text" name="name" id="name" placeholder="Name/Nombre" required>
              </label>
            </fieldset>

              <fieldset>
              <label class="precios" for = "price"></label>
              <input type="number" name= "price" id="price" placeholder="Price/Precio" min="0" required>
         </fieldset>

               <fieldset>
              <legend>Talles</legend>
              <input type="checkbox" name="size" id="" value="XS">
              <label for=>XS</label>
              <input type="checkbox" name="size" id="" value="S">
              <label for=>S</label>
              <input type="checkbox" name="size" id="" value="M">
              <label for=>M</label>
              <input type="checkbox" name="size" id="" value="L">
              <label for=>L</label>
              <input type="checkbox" name="size" id="" value="XL">
              <label for=>XL</label>
             </fieldset>

            <fieldset>
              <label class="descripciones" for="description"></label>
              <textarea name="description" id="description" required></textarea>
            </fieldset>
 
            <fieldset>
              <label class="img" for="image"></label>
              <input type="file" name="image" id="image" multiple >
            
            <fieldset>
              <label for="men">Hombre</label>
              <input type="radio" name="category" value="hombre" >
              <label for="women">Mujer</label>
              <input type="radio" name="category" value="mujer">
            </fieldset>

            <fieldset>
              <label for="discount">Descuento</label>
              <label class="ofertas" for="ofert"></label>
              <input type="checkbox" name="ofert" id="ofert">
              <input type="number" name="discount" id="discount">
              
              <!-- <i class="fas fa-percentage"></i> -->
            </fieldset>

            <fieldset>
              <button class="boton" type="submit">Save</button>
            </fieldset>
          </form>
        </section>
      </main>
      <%- include('../partials/footer') %>
  </body>

</html>