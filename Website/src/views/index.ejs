<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <main>
        <section id="banner">
          <picture>
            <img src="/img/Splash/Splash-1.jpg" alt="" srcset="">
          </picture>
        </section>
        <h2>Ofertas</h2>
        <section class="main_section">
          <% if (locals.products) { %>
            <% products.forEach(element=> { %>
              <% if (element.ofert) { %>
                <article>
                  <picture>
                    <a href="/products/<%= element.id %> ">
                      <img src="/img/Productos/<%= element.img[0] %> " alt="<%= element.name %> ">
                    </a>
                  </picture>
                  <ul>
                    <li><%= element.name %></li>
                  <article>
                    <li>$<%= element.price %></li>
                    <li>$<%= parseInt(element.price) * 0.8%></li>
                  </article>
                  </ul>
                </article>                    
              <% } %>
              <% }) %>
              <% } %>
        </section>
      </main>
      <%- include('./partials/footer') %>
  </body>

</html>
