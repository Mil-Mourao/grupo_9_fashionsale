<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main id="register">
      <section class="form-register">
        <article>
          <picture class="logo-form">
            <img src="/img/logo/logoSimple.svg" alt="" id="logo-form-top" />
          </picture>
        </article>
        <h3 id="form-title">¡Bienvenid@ a fashion sale!</h3>
        <form action="/users/save" method="post" id="form">
          <fieldset>
            <input class="controls" type="text" name="name" id="name" placeholder="Primer Nombre/s"/>
          </fieldset>
          <fieldset>
            <input class="controls" type="text" name="lastName" id="lastName" placeholder="Apellido"/>
          </fieldset>
          <fieldset>
            <input
              class="controls"
              type="email"
              name="email"
              id="email"
              placeholder="Email"
            />
          </fieldset>
          <fieldset>
            <input
              class="controls"
              type="password"
              name="password"
              id="password"
              placeholder="Contraseña"
            />
          </fieldset>
          <!-- <fieldset>
            <input
              class="controls"
              type="password"
              name="confirmacion"
              id="confirmacion"
              placeholder="Confirmar Contraseña"
            />
          </fieldset> -->
          <fieldset>
            <button class="button" type="submit">Continuar</button>
          </fieldset>
          <article>
            <fieldset>
              <input type="button" id="access_google" value="Google" />
            </fieldset>
            <fieldset>
              <input type="button" id="access_facebook" value="Facebook" />
            </fieldset>
          </article>
        </form>
      </section>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
