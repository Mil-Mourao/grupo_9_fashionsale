<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %> 
  <body>
    <%- include('../partials/header') %> 
    <main>
      <section >
        <article id="login-form-complete">
          <h1>Login</h1>
          <form action="/users/access" method="post" id="login-form">
            <fieldset>
              <legend class="no-show">Iniciar Sesión</legend>
              <label for="email" class="no-show">Email</label>
              <input type="email" name="email" id="email"
              <% if (locals.old && old.email) { %>
               value="<%= old.email %>"
              <% } else {%>
               placeholder="email" 
              <% } %> />
            </fieldset>
            <fieldset>
              <legend class="no-show">Iniciar Sesión</legend>
              <label class="no-show" for="password">Contraseña</label>
              <input type="password" name="password" id="pass" placeholder="contraseña" />
            </fieldset>
            <fieldset>
              <button type="submit" id="login-button">Iniciar Sesión</button>
            </fieldset>
            <fieldset>
              <a href="/users/register" id="register-link">Registrarse</a>
            </fieldset>
            <fieldset>
              <label class="remember" for="remember">
                <input type="checkbox" name="remember" id="remember" />Recuerdame
              </label>
            </fieldset>
          </form>
          <ul id="errorsList"></ul>
          <% if (locals.errors) { %>
            <% if (errors.email) { %>
                <p><%= errors.email.msg %></p>
            <% } %>
            <% if (errors.password) { %>
                <p><%= errors.password.msg %></p>
            <% } %>
        <% } %>
        </article>
      </section>
      <script src="/js/login.js"></script>
    </main>
    <%- include('../partials/footer') %> 
  </body>
</html>
