<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %> 
  <body>
    <%- include('../partials/header') %> 
    <main>
      <section >
        <article id="login-form-complete">
          <h1>Login</h1>
          <form action="/users/access" method="post" id="login-form">
            <fieldset>
              <legend class="no-show">Iniciar Sesión</legend>
              <label for="email" class="no-show">Email</label>
              <input type="email" name="email" id="email" placeholder="email"/>
            </fieldset>
            <fieldset>
              <legend class="no-show">Iniciar Sesión</legend>
              <label class="no-show" for="password">Contraseña</label>
              <input type="password" name="password" id="pass" placeholder="contraseña"/>
            </fieldset>
            <fieldset>
              <button type="submit" id="login-button">Iniciar Sesión</button>
            </fieldset>
            <fieldset>
              <a href="/users/register" id="register-link">Registrarse</a>
            </fieldset>
            <fieldset>
              <label class="remember" for="remember"
                ><input
                  type="checkbox"
                  name="remember"
                  id="remember"
                />Recuerdame</label
              >
            </fieldset>
          </form>
        </article>
      </section>
    </main>
    <%- include('../partials/footer') %> 
  </body>
</html>
