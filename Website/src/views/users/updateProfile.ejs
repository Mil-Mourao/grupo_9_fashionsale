<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <main id="update">
                <section>
                    <div class="form-update" >
                        
                        <div class="form-update2">
                            <form action="/users/edit?m=PUT" method="POST" id="form">
                            <div class="global">
                                <article>
                                    <picture class="logo-form">
                                        <img src="/img/logo/logoSimple.svg" alt="">
                                    </picture>
                                </article>
                                <fieldset>
                                    <h3>Â¡Modifica tus datos!</h3>
                                    <div class="errors" style="color: red;">
                                        <ul></ul>
                                    </div>
                                    <br>
                                </fieldset>
                                <fieldset>
                                    <label class="datos" for="firstName">Nombre</label>
                                    <input class= "datos2"type="text" name= "firstName" value="<%=user.firstName%>" id="name">
                                    <!-- agregar value para capturar los datos de la base en el input -->
                                    <% if (locals.errors && errors.name) { %>
                                        <div class="text-danger">
                                            <%= errors.name.msg %>
                                        </div>
                                        <% } %>
                                </fieldset>

                                <fieldset>
                                    <label class="datos" for="lastName">Apellido</label>
                                    <input class= "datos2" name="lastName" value="<%=user.lastName%>" id="lastName"></input>
                                    <% if (locals.errors && errors.lastName) { %>
                                        <div class="text-danger">
                                            <%= errors.lastName.msg %>
                                        </div>
                                        <% } %>
                                </fieldset>

                                <fieldset>
                                    <label class="datos" for="email">E-mail</label>
                                    <input class= "datos2" type="text" name="email" id="email" value="<%=user.email%>">
                                    <% if (locals.errors && errors.email) { %>
                                        <div class="text-danger">
                                            <%= errors.email.msg %>
                                        </div>
                                        <% } %>
                                </fieldset>

                                <input type="submit" value="Enviar" id="button-enviar">
                            </div>
                        </div>
                    </div>
                </section>
                </form>




                <!--   <form action="/admin/borrar/" method="POST" class ="form-box-admin">
                <input type="submit" value="ELIMINAR PRODUCTO">
            </form> -->



            </main>

            <%- include('../partials/footer') %>
    </body>

</html>